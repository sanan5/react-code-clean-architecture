{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@domain/*": [
        "packages/domain/src/*"
      ],
      "@adapter/*": [
        "packages/adapter/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ]
}