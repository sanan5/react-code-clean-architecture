{
  "compilerOptions": {
    "outDir": ".",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["src/adapters/*"],
      "@domains/*": ["src/domains/*"],
      "@frameworks/*": ["src/frameworks/*"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2015"
    ]
  },
  "exclude": [
    "node_modules",
    "mock-server"
  ]
}